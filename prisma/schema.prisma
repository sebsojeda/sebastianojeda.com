generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model PostViews {
  id    Int    @id @default(autoincrement())
  slug  String @unique @db.VarChar(255)
  views Int    @default(0)
}

model PostLikes {
  id     Int    @id @default(autoincrement())
  slug   String @db.VarChar(255)
  ipHash String @db.VarChar(64)

  @@unique([slug, ipHash])
}
